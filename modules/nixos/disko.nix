{ lib, config, ... }:
{
  options.modules.disko = {
    enable = lib.mkEnableOption "Enable disko";
  };

  config = lib.mkIf config.modules.disko.enable {
    disko.devices.disk.${config.networking.hostName} = {
      type = "disk";
      content = {
        type = "gpt";
        partitions = {
          boot = {
            size = "1M";
            type = "EF02";
          };
          ESP = {
            size = "512M";
            type = "EF00";
            content = {
              type = "filesystem";
              format = "vfat";
              mountpoint = "/boot";
              mountOptions = [ "umask=0077" ];
            };
          };
          root = {
            size = "100%";
            content = {
              type = "filesystem";
              format = "ext4";
              mountpoint = "/";
            };
          };
        };
      };
    };
  };
}
